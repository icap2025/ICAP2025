# Server Configuration
PORT=5000
NODE_ENV=production

# Database - IMPORTANT: Allow Vercel IPs in MongoDB Atlas
# Go to MongoDB Atlas > Network Access > Add IP Address > Allow Access from Anywhere (0.0.0.0/0)
MONGO_URI=your_mongodb_connection_string_here

# JWT
SECRET_KEY=your_secret_key_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM=your_email@gmail.com

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Payments
PAYMENT_API_TOKEN=your_payment_token

# Frontend URLs (Update with your actual domains)
NEXT_PUBLIC_APP_FRONTEND_URL=https://your-frontend-domain.com
NEXT_PUBLIC_ADMIN_FRONTEND_URL=https://your-admin-domain.com
